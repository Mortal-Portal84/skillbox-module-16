{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
